<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dark"
    tools:context="com.amtesting.mobileagentatex.Booking.summarybiaya">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/step_summary_biaya"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="5dp">

    <!--detail pengirim-->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_summary_biaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@color/background_material_light"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2.5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tv_detail_pengiriman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:text="Detail Pengiriman"
                android:drawableLeft="@mipmap/ic_small_calculator"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="25dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/titel_biaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Biaya"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_biaya_pengiriman"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:text="10000"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="25dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/titel_diskon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Diskon"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_diskon_pengiriman"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="25dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/titel_total_biaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Total Biaya"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_total_biaya_pengiriman"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical|right"
                    android:text="100000"
                    android:textSize="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="25dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/titel_jumlah_bayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Jumlah Biaya Dibayarkan"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tf_jumlah_bayar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="0"
                    android:background="@drawable/edittext_box"
                    android:inputType="textNoSuggestions"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="25dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/titel_kembalian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Kembalian"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tf_jumlah_kembalian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="0"
                    android:background="@drawable/edittext_box"
                    android:inputType="textNoSuggestions"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginTop="25dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv_nomor_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:text="Input Nomor Booking"
                android:drawableLeft="@mipmap/ic_small_scan"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:textSize="17dp"
                android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="25dp"
                android:weightSum="1">
                <TextView
                    android:id="@+id/titel_nobooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Nomor Booking"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tf_no_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="No Booking"
                    android:background="@drawable/edittext_box"
                    android:inputType="textNoSuggestions"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="25dp"
                android:weightSum="1">
                <Button
                    android:id="@+id/btn_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    android:textColor="@android:color/white"
                    android:background="@drawable/state_button_back"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"/>
                </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="75dp">
            <Button
                android:id="@+id/btn_proses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proses"
                android:textColor="@android:color/white"
                android:layout_marginBottom="75dp"
                android:background="@drawable/state_button_next"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
</ScrollView>
</FrameLayout>
